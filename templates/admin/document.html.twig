{% extends 'admin/base.html.twig' %}

{% block title %}Devis/Facture
{% endblock %}
{% block h1 %}Devis/Facture
{% endblock %}

{% block content %}

	<div class="table-responsive col-12 col-lg-12 col-xl-10 p-0 m-0 mt-5 mx-auto">

		<table class="table table-striped table-dark text-center">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">ID client</th>
					<th scope="col">Nom</th>
					<th scope="col">Type</th>
					<th scope="col">État</th>
					<th scope="col">Envoyer</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for doc in document|reverse  %}
					{% if doc.type == 'Devis' or doc.type == 'Facture' %}
						<tr>
							<th scope="row">{{doc.id}}</th>
							<td>{{doc.client.id}}</td>
							<td>{{doc.client.lastname|capitalize}}</td>
							<td>{{doc.type}}</td>
							<td>{{doc.client.phonenumber}}</td>
							<td>
								<a href="/admin/generatepdf/{{doc.id}}" id="{{doc.id}}" class="btn btn264d7e text-white reply sendquote">Envoyer</a>
							</td>
							<td>
								<div class="custom-control custom-switch">
									<input type="checkbox" class="custom-control-input messageswitches" contactwitches="{{doc.id}}" id="messageSwitches{{doc.id}}" {% if doc.isActive %} checked {% endif %}>
									<label class="custom-control-label" for="messageSwitches{{doc.id}}"></label>
								</div>
							</td>
						</tr>
					{% endif %}
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="d-flex justify-content-end col-12 col-lg-12 col-xl-10 p-0 m-0 mx-auto">
		<a class="btn text-white btn264d7e" href="/admin/createdocument">Créer un document</a>
	</div>
{% endblock %}
