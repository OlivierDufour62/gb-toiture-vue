{% extends 'admin/base.html.twig' %}

{% block title %}Client
{% endblock %}
{% block h1 %}Client
{% endblock %}

{% block content %}

	<div class="table-responsive col-12 col-lg-12 col-xl-10 p-0 m-0 mt-5 mx-auto">
		<table class="table table-striped table-dark text-center">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Nom</th>
					<th scope="col">Prénom</th>
					<th scope="col">Email</th>
					<th scope="col">Téléphone</th>
					<th scope="col">Éditer</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for customers in allCustomer %}
				{% if customers.isActive == true %}
					<tr>
						<th scope="row">{{customers.id}}</th>
						<td>{{customers.lastname|capitalize}}</td>
						<td>{{customers.firstname|capitalize}}</td>
						<td>{{customers.email}}</td>
						<td>{{customers.phonenumber}}</td>
						<td>
							<a href="/admin/editcustomer/{{customers.id}}">
								<i class="ri-arrow-right-line text-white"></i>
							</a>
						</td>
						<td>
							<div class="custom-control custom-switch">
								<input type="checkbox" class="custom-control-input customerswitches" customerswitches="{{customers.id}}" id="customSwitches{{customers.id}}" {% if customers.isActive %} checked {% endif %}>
								<label class="custom-control-label" for="customSwitches{{customers.id}}"></label>
							</div>
						</td>
					</tr>
				{% endif %}
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="d-flex justify-content-end col-12 col-lg-12 col-xl-10 p-0 m-0 mx-auto">
		<a class="btn text-white btn264d7e" href="/admin/addcustomer">Ajouter un client</a>
	</div>
{% endblock %}
