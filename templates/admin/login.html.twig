{% extends 'admin/base.html.twig' %}

{% block title %}Connection
{% endblock %}
{% block h1 %}Connectez vous
{% endblock %}

{% block content %}
	<div class="col-12 col-xl-9 mt-5">
		<form class="col-12 col-xl-4 mx-auto" method="POST">
			<label for="inputEmail">Email</label>
			<input type="email" {% if last_username is defined %} value="{{ last_username }}" {% endif %} name="email" id="inputEmail" class="form-control" required autofocus>
			<label for="inputPassword">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control" required>
	
			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
	
	
			<button class="btn btn-lg btn-primary mt-3" type="submit">
				Connection
			</button>
		</form>
	</div>
{% endblock %}
